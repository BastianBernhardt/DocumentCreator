<Window x:Class="DocumentCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Document Creator" Height="200" Width="300">
    <StackPanel Margin="10">
        <CheckBox x:Name="GreetingCheck" Content="Include Greeting" Margin="0,0,0,5"/>
        <CheckBox x:Name="BodyCheck" Content="Include Body" Margin="0,0,0,5"/>
        <CheckBox x:Name="ConclusionCheck" Content="Include Conclusion" Margin="0,0,0,5"/>
        <Button Content="Generate Document" Click="GenerateDocument_Click"/>
    </StackPanel>
</Window>
